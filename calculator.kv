Interface:
#message_bar:

<Interface@FloatLayout>:
    First:
    message_bar:

#:set message_bar_text 0
#:set message_bar_color 0

<message_bar@FloatLayout>:
    Label:
        pos_hint: {'center_x':0.5,'top':0.9}
        canvas.before:
            Color:
                rgba: 0,0,1,message_bar_color
            Rectangle:
                pos: self.pos
                size: self.size
        text: 'ERROR Message'
        color: 1,1,1,message_bar_text
        size_hint: None,None
        size: 300,50

<First>:
    canvas:
        Color:
            rgba: 33/255,33/255,33/255,1
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'vertical'
    padding: 15,15
    spacing: 30
    Label:
        pos_hint: {"x":0.02}
        size_hint: .96,.35
        font_size: 80
        font_name: 'ERASBD.TTF'
        text: root.num_text
        canvas.before:
            Color:
                rgba: (100/255,100/255,100/255,0.3)
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [40]
    GridLayout:
        cols:4
        rows:4
        spacing: 15
        
        Custom_Button_2:
            text: '7'
            on_press: root.button_click('7')
        Custom_Button_2:
            text: '8'
            on_press: root.button_click('8')
        Custom_Button_2:
            text: '9'
            on_press: root.button_click('9')
        Custom_Button_1:
            text: '+'
            on_press: root.button_click('+')
        Custom_Button_2:
            text: '4'
            on_press: root.button_click('4')
        Custom_Button_2:
            text: '5'
            on_press: root.button_click('5')
        Custom_Button_2:
            text: '6'
            on_press: root.button_click('6')
        Custom_Button_1:
            text: '-'
            on_press: root.button_click('-')
        Custom_Button_2:
            text: '1'
            on_press: root.button_click('1')
        Custom_Button_2:
            text: '2'
            on_press: root.button_click('2')
        Custom_Button_2:
            text: '3'
            on_press: root.button_click('3')
        Custom_Button_1:
            text: '*'
            on_press: root.button_click('*')
        Custom_Button_3:
            text: 'C'
            on_press: root.button_click('C')
        Custom_Button_2:
            text: '0'
            on_press: root.button_click('0')
        Custom_Button_3:
            text: '='
            on_press: root.button_click('=')
        Custom_Button_1:
            text: '/'
            on_press: root.button_click('/')

<Custom_Button_1@Button>
    size: self.size
    font_name: 'msjh.ttc'
    font_size: 100
    color: 0,0,0,1
    background_normal: 'normal_1.png'
    background_color: 1, 1, 1, 1
    background_down: 'down_1.png'
    
<Custom_Button_2@Button>
    size: self.size
    font_name: 'ERASBD.TTF'
    font_size: 80
    color: 1,1,1,1
    background_normal: 'normal_2.png'
    background_color: 1, 1, 1, 1
    background_down: 'down_3.png'
    
<Custom_Button_3@Button>
    size: self.size
    font_name: 'ERASBD.TTF'
    font_size: 80
    color: 1,1,1,1
    background_normal: 'normal_3.png'
    background_color: 1, 1, 1, 1
